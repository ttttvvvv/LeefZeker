<style>
  .valpreventie-theme {
    --theme-color: #4CAF50;
    --theme-color-light: #66BB6A;
    --theme-color-bg: #f8fdf8;
  }

  .hero {
    background: linear-gradient(135deg, var(--theme-color-bg) 0%, #ffffff 100%);
    padding: 3rem 0 4rem;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .breadcrumb {
    font-size: 0.875rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .breadcrumb-link {
    color: var(--theme-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: var(--theme-color-light);
    text-decoration: underline;
  }

  .breadcrumb-separator {
    color: var(--text-gray);
    font-size: 0.75rem;
  }

  .breadcrumb-current {
    color: var(--text-gray);
    font-weight: 500;
  }

  .hero-icon {
    background: var(--theme-color);
    color: var(--white);
    width: 90px;
    height: 90px;
    border-radius: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-gray);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .hero-features {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .hero-features span {
    font-size: 0.875rem;
    color: var(--theme-color);
    font-weight: 500;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-hero {
    min-height: 56px;
    min-width: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .hero-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .intro-section {
    background: var(--white);
    padding: 4rem 0;
  }

  .intro-content h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
  }

  .intro-text {
    font-size: 1.125rem;
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: 3rem;
  }

  .warning-signs {
    background: var(--theme-color-bg);
    padding: 2rem;
    border-radius: 1rem;
    border-left: 4px solid var(--theme-color);
  }

  .warning-signs h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
  }

  .signs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .sign-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--white);
    border-radius: 0.5rem;
