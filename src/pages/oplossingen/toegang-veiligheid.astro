    font-weight: 600;
  }

  .product-content {
    padding: 2rem;
  }

  .product-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .product-content p {
    color: var(--text-gray);
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .product-features {
