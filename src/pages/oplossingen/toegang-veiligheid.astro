<style>
  .toegang-theme {
    --theme-color: #9C27B0;
    --theme-color-light: #BA68C8;
    --theme-color-bg: #f8f0ff;
  }

  .hero {
    background: linear-gradient(135deg, var(--theme-color-bg) 0%, #ffffff 100%);
    padding: 3rem 0 4rem;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .breadcrumb {
    font-size: 0.875rem;
    color: var(--text-gray);
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: var(--theme-color);
    text-decoration: none;
  }

  .hero-icon {
    background: var(--theme-color);
    color: var(--white);
    width: 90px;
    height: 90px;
    border-radius: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-gray);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .hero-features {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .hero-features span {
    font-size: 0.875rem;
    color: var(--theme-color);
    font-weight: 500;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .intro-section {
    background: var(--white);
    padding: 4rem 0;
  }

  .intro-content h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
  }

  .intro-text {
    font-size: 1.125rem;
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: 3rem;
  }

  .warning-signs {
    background: var(--theme-color-bg);
    padding: 2rem;
    border-radius: 1rem;
    border-left: 4px solid var(--theme-color);
  }

  .warning-signs h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
  }

  .signs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .sign-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--white);
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .sign-icon {
    font-size: 1.5rem;
  }

  .signs-conclusion {
    font-weight: 500;
    color: var(--theme-color-light);
    font-style: italic;
    margin-bottom: 0;
  }

  .services-section {
    background: var(--warm-gray);
    padding: 4rem 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    text-align: center;
  }

  .service-number {
    width: 50px;
    height: 50px;
    background: var(--white);
    color: var(--theme-color);
    border: 2px solid var(--theme-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto 1.5rem;
  }

  .service-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .products-section {
    background: var(--white);
    padding: 4rem 0;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--border-light);
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--theme-color);
