<script>
  // Enhanced Step-by-Step Quiz functionality
  document.addEventListener('DOMContentLoaded', function() {
    let currentStep = 1;
    const totalSteps = 5;
    let quizData = {};
    let selectedThemes = new Set();

    // Initialize quiz
    initializeQuiz();

    function initializeQuiz() {
      updateProgress();
      showVisualContent();
      
      // Add click listeners to all option buttons
      document.querySelectorAll('.option-button').forEach(button => {
        button.addEventListener('click', handleOptionClick);
      });
    }

    function handleOptionClick(event) {
      const button = event.currentTarget;
      const step = button.closest('.quiz-step');
      const stepNumber = parseInt(step.dataset.step);
      const theme = button.dataset.theme;
      const answer = button.dataset.answer;

      // Remove selected class from all options in this step
      step.querySelectorAll('.option-button').forEach(opt => {
        opt.classList.remove('selected');
      });

      // Add selected class to clicked option
      button.classList.add('selected');

      // Store answer
      quizData[`step${stepNumber}`] = {
        answer: answer,
        theme: theme,
        button: button.cloneNode(true)
      };

      // Add theme to set if it exists
      if (theme) {
        selectedThemes.add(theme);
      }

      // Auto-advance after short delay
      setTimeout(() => {
        if (stepNumber < totalSteps) {
          nextStep();
        } else {
          showResults();
        }
      }, 600);
    }

    function nextStep() {
      // Hide current step
      document.querySelector('.quiz-step.active').classList.remove('active');
      
      currentStep++;
      
      // Show next step with animation
      const nextStepEl = document.querySelector(`[data-step="${currentStep}"]`);
      if (nextStepEl) {
        nextStepEl.classList.add('active', 'animate-in');
        
        // Remove animation class after animation completes
        setTimeout(() => {
          nextStepEl.classList.remove('animate-in');
        }, 400);
      }

      updateProgress();
      showVisualContent();
    }

    function updateProgress() {
      const progressFill = document.getElementById('quiz-progress-fill');
      const progressText = document.getElementById('quiz-progress-text');
      
      if (progressFill && progressText) {
        const progress = (currentStep / totalSteps) * 100;
        progressFill.style.width = `${progress}%`;
        
        if (currentStep <= totalSteps) {
          progressText.textContent = `Vraag ${currentStep} van ${totalSteps}`;
        } else {
          progressText.textContent = 'Resultaten';
        }
      }
    }

    function showVisualContent() {
      const visualIcon = document.getElementById('visual-icon');
      const visualText = document.getElementById('visual-text');
      const visualContent = document.getElementById('visual-content');

      const contentMap = {
        1: { icon: '🏠', text: 'Traplopen & mobiliteit' },
        2: { icon: '⚠️', text: 'Veiligheid & valpreventie' },
        3: { icon: '🌡️', text: 'Klimaatcomfort' },
        4: { icon: '🔒', text: 'Digitale veiligheid' },
        5: { icon: '📋', text: 'WMO & subsidies' }
      };

      const content = contentMap[currentStep];
      if (content && visualIcon && visualText && visualContent) {
        // Hide content first
        visualContent.classList.remove('show');
        
        // Update content after brief delay
        setTimeout(() => {
          visualIcon.textContent = content.icon;
          visualText.textContent = content.text;
          visualContent.classList.add('show');
        }, 150);
      }
    }

    function showResults() {
      // Hide current step
      document.querySelector('.quiz-step.active').classList.remove('active');
      
      // Show results step
      const resultsStep = document.querySelector('.quiz-results-step');
      if (resultsStep) {
        resultsStep.classList.add('active', 'animate-in');
        
        setTimeout(() => {
          resultsStep.classList.remove('animate-in');
        }, 400);
      }

      // Update progress to completed
      currentStep = totalSteps + 1;
      updateProgress();

      // Generate personalized results
      generateResults();
      
      // Update visual
      showResultsVisual();
    }

    function generateResults() {
      const summaryEl = document.getElementById('quiz-results-summary');
      const themesEl = document.getElementById('quiz-results-themes');

      if (summaryEl) {
        summaryEl.innerHTML = generatePersonalizedMessage();
      }

      if (themesEl) {
        const themeTexts = {
          'mobiliteit': { icon: '🚶', text: 'Trapondersteuning & mobiliteitshulpmiddelen' },
          'valpreventie': { icon: '🛡️', text: 'Valpreventie & woningveiligheid' },
          'alarmering': { icon: '📞', text: 'Slimme alarmering & sensoren' },
          'klimaat': { icon: '🌡️', text: 'Klimaat & comfort oplossingen' },
          'toegang': { icon: '🔒', text: 'Toegangscontrole & digitale veiligheid' },
          'subsidie': { icon: '💰', text: 'WMO-begeleiding & subsidieadvies' }
        };

        themesEl.innerHTML = '';
        selectedThemes.forEach(theme => {
          if (themeTexts[theme]) {
            const themeDiv = document.createElement('div');
            themeDiv.className = 'results-theme';
            themeDiv.innerHTML = `
              <span style="font-size: 1.25rem;">${themeTexts[theme].icon}</span>
              <span>${themeTexts[theme].text}</span>
            `;
            themesEl.appendChild(themeDiv);
          }
        });
      }
    }

    function generatePersonalizedMessage() {
      const answers = Object.values(quizData).map(d => d.answer);
      
      if (answers.includes('difficult') && selectedThemes.has('subsidie')) {
        return '<p><strong>U bent onzeker met traplopen en heeft vragen over subsidie</strong> — een traplift met WMO-begeleiding zou goed kunnen helpen. Wij adviseren een persoonlijk gesprek om alle mogelijkheden te bespreken.</p>';
      } else if (answers.includes('fell-home') || answers.includes('fell-alone')) {
        return '<p><strong>U heeft ervaring met vallen</strong> — valpreventie-maatregelen en mogelijk alarmering kunnen u helpen om veiliger te wonen. Laten we samen kijken naar de beste oplossingen.</p>';
      } else if (answers.includes('hot-summer') || answers.includes('cold-winter')) {
        return '<p><strong>Klimaatproblemen kunnen vervelend zijn</strong> — wij kunnen u adviseren over airconditioning, verwarming en andere comfort-oplossingen die geschikt zijn voor uw situatie.</p>';
      } else if (selectedThemes.has('toegang')) {
        return '<p><strong>Digitale veiligheid is belangrijk</strong> — wij helpen u graag met veilige toegangscontrole en bescherming tegen online oplichting en inbraak.</p>';
      } else if (selectedThemes.has('subsidie')) {
        return '<p><strong>WMO en subsidies kunnen ingewikkeld zijn</strong> — wij begeleiden u graag door het hele proces en zorgen dat u niets over het hoofd ziet.</p>';
      }
      
      return '<p><strong>Op basis van uw antwoorden</strong> kunnen wij u helpen met verschillende aspecten van veilig wonen. Een gratis adviesgesprek geeft duidelijkheid over de beste oplossingen voor uw situatie.</p>';
    }

    function showResultsVisual() {
      const visualIcon = document.getElementById('visual-icon');
      const visualText = document.getElementById('visual-text');
      const visualContent = document.getElementById('visual-content');

      if (visualIcon && visualText && visualContent) {
        visualContent.classList.remove('show');
        
        setTimeout(() => {
          visualIcon.textContent = '🎯';
          visualText.textContent = 'Uw persoonlijke oplossingen';
          visualContent.classList.add('show');
        }, 150);
      }
    }
  });

  // Funding accordion functionality
  function toggleFunding(id) {
    const content = document.getElementById(id + '-content');
    const header = content.previousElementSibling;
    const icon = header.querySelector('.funding-icon');
    
    // Close all other items
    document.querySelectorAll('.funding-content').forEach(item => {
      if (item !== content) {
        item.classList.remove('show');
        item.previousElementSibling.classList.remove('active');
      }
    });
    
    // Toggle current item
    content.classList.toggle('show');
    header.classList.toggle('active');
  }

  // Make toggleFunding globally available
  window.toggleFunding = toggleFunding;

  // FAQ functionality
  function toggleFAQ(id) {
    const answer = document.getElementById(id + '-answer');
    const question = answer.previousElementSibling;
    const icon = question.querySelector('.faq-icon');
    
    // Close all other FAQ items
    document.querySelectorAll('.faq-answer').forEach(item => {
      if (item !== answer) {
        item.classList.remove('show');
        item.previousElementSibling.classList.remove('active');
      }
    });
    
    // Toggle current item
    answer.classList.toggle('show');
    question.classList.toggle('active');
  }

