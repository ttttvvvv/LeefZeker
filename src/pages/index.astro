---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Trapliften & Mobiliteitshulpmiddelen – LeefZeker"
  description="LeefZeker levert trapliften, platformliften en mobiliteitshulpmiddelen met WMO-advies. Gratis thuisadvies, 5 jaar garantie."
>
  <Header />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "LeefZeker",
    "image": "https://www.leefzeker.nl/leefzekerLogo.png",
    "telephone": "020-123-45-67",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "NL"
    },
    "sameAs": [
      "https://www.facebook.com/leefzeker",
      "https://www.linkedin.com/company/leefzeker"
    ],
    "openingHours": "Mo-Fr 08:00-17:00",
    "priceRange": "€€€",
    "areaServed": "Nederland",
    "description": "Specialist in trapliften, platformliften en mobiliteitshulpmiddelen met WMO-advies en subsidiebegeleiding",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Trapliften & Mobiliteitshulpmiddelen",
      "itemListElement": [
        {
          "@type": "Product",
          "name": "Rechte Trapliften",
          "description": "WMO-gepast, subsidie mogelijk",
          "offers": {
            "@type": "Offer",
            "price": "3500",
            "priceCurrency": "EUR"
          }
        },
        {
          "@type": "Product", 
          "name": "Gebogen Trapliften",
          "description": "WMO-pakket standaard inbegrepen",
          "offers": {
            "@type": "Offer",
            "price": "8500",
            "priceCurrency": "EUR"
          }
        },
        {
          "@type": "Product",
          "name": "Platformliften",
          "description": "Subsidie-controle via WMO-loket"
        }
      ]
    }
  }
  </script>
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <h1 class="hero-title">
              Trapliften, Advies & Mobiliteitshulpmiddelen – <span class="highlight">Veilig, Zelfstandig, Thuis</span>
            </h1>
            <h2 class="hero-subtitle">
              Trapliften op maat, platform en mobiliteitshulpmiddelen voor senioren – inclusief WMO-advies & subsidiebegeleiding.
            </h2>
            <div class="hero-actions">
              <a href="/offerte" class="btn btn-primary" id="cta-hero-offerte">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 11H5a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7a2 2 0 0 0-2-2h-4"></path>
                  <polyline points="9,11 12,14 15,11"></polyline>
                  <line x1="12" y1="2" x2="12" y2="14"></line>
                </svg>
                Offerte traplift aanvragen
              </a>
              <a href="/producten" class="btn btn-secondary" id="cta-hero-producten">Bekijk Producten</a>
            </div>
            <div class="hero-features">
              <div class="feature-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>5 jaar garantie</span>
              </div>
              <div class="feature-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>Gratis thuisadvies</span>
              </div>
              <div class="feature-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4"></path>
                  <circle cx="12" cy="12" r="10"></circle>
                </svg>
                <span>WMO-ondersteuning</span>
              </div>
            </div>
          </div>
          <div class="hero-image">
            <img src="/src/assets/img_site/stairlift.jpg" alt="traplift veilige woning WMO" class="hero-img" loading="lazy" />
            <div class="hero-badge">
              <div class="badge-content">
                <span class="badge-title">Gratis thuisadvies</span>
                <span class="badge-text">Wij komen gratis bij u langs om vrijblijvend advies op maat te geven voor uw trap.</span>
                <a href="/contact" class="badge-link">Plan afspraak</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="section products-section">
      <div class="container">
        <h2 class="section-title">Onze Producten</h2>
        <p class="section-subtitle">
          Ontdek ons uitgebreide assortiment trapliften en mobiliteitshulpmiddelen, 
          speciaal ontworpen voor uw comfort en veiligheid.
        </p>
        
        <div class="products-grid">
          <div class="product-card" itemscope itemtype="https://schema.org/Product">
            <div class="product-image">
              <img src="/src/assets/img_site/stairlift.jpg" alt="Rechte traplift WMO-subsidie" loading="lazy" />
              <div class="product-badge">Populair</div>
            </div>
            <div class="product-content">
              <h3 class="product-title" itemprop="name">Rechte Trapliften</h3>
              <p class="product-description" itemprop="description">
                Perfect voor rechte trappen. Eenvoudig te installeren en gebruiken, 
                met alle veiligheidsvoorzieningen die u nodig heeft.
              </p>
              <ul class="product-features">
                <li><strong>WMO-gepast</strong> - Geschikt voor alle rechte trappen</li>
                <li><strong>Subsidie mogelijk</strong> - Veilige en comfortabele zitting</li>
                <li>Eenvoudige bediening</li>
              </ul>
              <div class="product-actions">
                <a href="/producten/trapliften" class="btn btn-primary" id="cta-rechtetrap-wmo">Meer Info</a>
                <span class="product-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                  Vanaf €3.500
                </span>
              </div>
            </div>
          </div>

          <div class="product-card" itemscope itemtype="https://schema.org/Product">
            <div class="product-image">
              <img src="/src/assets/img_site/stairlift installation.jpg" alt="Gebogen traplift WMO-pakket" loading="lazy" />
            </div>
            <div class="product-content">
              <h3 class="product-title" itemprop="name">Gebogen Trapliften</h3>
              <p class="product-description" itemprop="description">
                Op maat gemaakt voor trappen met bochten. Elke traplift wordt 
                speciaal aangepast aan uw unieke trapsituatie.
              </p>
              <ul class="product-features">
                <li><strong>WMO-pakket standaard inbegrepen</strong></li>
                <li>Maatwerk voor elke trap</li>
                <li>Soepele bochten en wendingen</li>
              </ul>
              <div class="product-actions">
                <a href="/producten/trapliften" class="btn btn-primary" id="cta-gebogentrap-wmo">Meer Info</a>
                <span class="product-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                  Vanaf €8.500
                </span>
              </div>
            </div>
          </div>

          <div class="product-card" itemscope itemtype="https://schema.org/Product">
            <div class="product-image">
              <img src="/src/assets/img_site/Wheelchair-Lift-Installation-Process-DME-Elevators-Lifts-scaled-1.jpg" alt="Platformlift subsidie-controle WMO" loading="lazy" />
            </div>
            <div class="product-content">
              <h3 class="product-title" itemprop="name">Platformliften</h3>
              <p class="product-description" itemprop="description">
                Ideaal voor rolstoelgebruikers. Veilig en betrouwbaar transport 
                tussen verschillende verdiepingen.
              </p>
              <ul class="product-features">
                <li><strong>Subsidie-controle via WMO-loket</strong></li>
                <li>Geschikt voor rolstoelen</li>
                <li>Binnen en buiten plaatsing</li>
              </ul>
              <div class="product-actions">
                <a href="/producten/platformliften" class="btn btn-primary" id="cta-platformlift-wmo">Meer Info</a>
                <span class="product-price">Op aanvraag</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="section why-choose-section">
      <div class="container">
        <div class="why-choose-content">
          <div class="why-choose-text">
            <h2 class="section-title text-left">Waarom kiezen voor LeefZeker?</h2>
            <p class="section-subtitle text-left">
              Met meer dan 15 jaar ervaring zijn wij dé specialist in trapliften en mobiliteitshulpmiddelen. 
              Wij staan voor kwaliteit, betrouwbaarheid en persoonlijke service.
            </p>
            
            <div class="benefits-grid">
              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                  </svg>
                </div>
                <div class="benefit-content">
                  <h3 class="benefit-title">WMO-indicatie & subsidieproces</h3>
                  <p class="benefit-description">Volledige ondersteuning bij WMO-aanvragen en subsidiebegeleiding</p>
                </div>
              </div>

              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 12l2 2 4-4"></path>
                    <circle cx="12" cy="12" r="10"></circle>
                  </svg>
                </div>
                <div class="benefit-content">
                  <h3 class="benefit-title">5 jaar garantie, onderhoudscontract</h3>
                  <p class="benefit-description">Uitgebreide garantie en fix-on-demand service</p>
                </div>
              </div>

              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12,6 12,12 16,14"></polyline>
                  </svg>
                </div>
                <div class="benefit-content">
                  <h3 class="benefit-title">Digitale offerte, planning en onderhoud</h3>
                  <p class="benefit-description">Moderne digitale aanpak voor snelle service</p>
                </div>
              </div>

              <div class="benefit-item">
                <div class="benefit-icon">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9,22 9,12 15,12 15,22"></polyline>
                  </svg>
                </div>
                <div class="benefit-content">
                  <h3 class="benefit-title">Gratis thuisadvies</h3>
                  <p class="benefit-description">Persoonlijk advies bij u thuis, geheel vrijblijvend</p>
                </div>
              </div>
            </div>
          </div>
          <div class="why-choose-image">
            <img src="/src/assets/img_site/pexels-olly-3768131.jpg" alt="Tevreden klant met traplift" loading="lazy" />
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="section testimonials-section">
      <div class="container">
        <h2 class="section-title">Wat onze klanten zeggen</h2>
        <p class="section-subtitle">
          Lees de ervaringen van onze tevreden klanten die dankzij LeefZeker 
          weer veilig en zelfstandig kunnen wonen.
        </p>
        
        <div class="testimonials-grid">
          <div class="testimonial-card" itemscope itemtype="https://schema.org/Review">
            <div class="testimonial-content">
              <div class="stars" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                <span>★★★★★</span>
                <meta itemprop="ratingValue" content="5">
                <meta itemprop="bestRating" content="5">
              </div>
              <p class="testimonial-text" itemprop="reviewBody">
                "Uitstekende service! De traplift is perfect geïnstalleerd en werkt fantastisch. 
                Het WMO-proces werd volledig voor ons geregeld. Ik kan LeefZeker van harte aanbevelen."
              </p>
            </div>
            <div class="testimonial-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
              <img src="/src/assets/img_site/pexels-olly-3768131.jpg" alt="Maria van der Berg" class="author-image" loading="lazy" />
              <div class="author-info">
                <h4 class="author-name" itemprop="name">Maria van der Berg</h4>
                <span class="author-location">Amsterdam</span>
              </div>
            </div>
            <meta itemprop="itemReviewed" content="LeefZeker Trapliften">
            <meta itemprop="datePublished" content="2024-01-15">
          </div>

          <div class="testimonial-card" itemscope itemtype="https://schema.org/Review">
            <div class="testimonial-content">
              <div class="stars" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                <span>★★★★★</span>
                <meta itemprop="ratingValue" content="5">
                <meta itemprop="bestRating" content="5">
              </div>
              <p class="testimonial-text" itemprop="reviewBody">
                "Na een heupoperatie was de trap een groot probleem. Dankzij de traplift van LeefZeker 
                kan ik weer naar boven. De subsidie-aanvraag ging vlot en installatie was perfect."
              </p>
            </div>
            <div class="testimonial-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
              <img src="/src/assets/img_site/pexels-matthiaszomer-339620.jpg" alt="Jan Bakker" class="author-image" loading="lazy" />
              <div class="author-info">
                <h4 class="author-name" itemprop="name">Jan Bakker</h4>
                <span class="author-location">Utrecht</span>
              </div>
            </div>
            <meta itemprop="itemReviewed" content="LeefZeker Trapliften">
            <meta itemprop="datePublished" content="2024-01-10">
          </div>

          <div class="testimonial-card" itemscope itemtype="https://schema.org/Review">
            <div class="testimonial-content">
              <div class="stars" itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                <span>★★★★★</span>
                <meta itemprop="ratingValue" content="5">
                <meta itemprop="bestRating" content="5">
              </div>
              <p class="testimonial-text" itemprop="reviewBody">
                "Zeer tevreden over de service en kwaliteit. Het gratis thuisadvies was zeer waardevol 
                en de WMO-begeleiding maakte alles zo eenvoudig. Bedankt LeefZeker!"
              </p>
            </div>
            <div class="testimonial-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
              <img src="/src/assets/img_site/pexels-kampus-7551684.jpg" alt="Els Jansen" class="author-image" loading="lazy" />
              <div class="author-info">
                <h4 class="author-name" itemprop="name">Els Jansen</h4>
                <span class="author-location">Den Haag</span>
              </div>
            </div>
            <meta itemprop="itemReviewed" content="LeefZeker Trapliften">
            <meta itemprop="datePublished" content="2024-01-05">
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Klaar voor meer vrijheid en veiligheid?</h2>
          <p class="cta-description">
            Vraag vandaag nog een gratis offerte aan en ontdek hoe wij u kunnen helpen 
            om veilig en zelfstandig te blijven wonen.
          </p>
          <div class="cta-actions">
            <a href="tel:020-123-45-67" class="btn btn-primary btn-large" id="cta-phone-hero">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              Bel nu: 020 123 45 67
            </a>
            <a href="/offerte" class="btn btn-secondary btn-large" id="cta-offerte-hero">Gratis Offerte</a>
          </div>
          <p class="cta-note">Binnen 24 uur reactie gegarandeerd</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--warm-gray) 0%, #ffffff 100%);
    padding: 4rem 0;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1.4;
    color: var(--text-gray);
    margin-bottom: 2rem;
  }

  .highlight {
    color: var(--primary-green);
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .hero-features {
    display: flex;
    gap: 2rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-gray);
    font-weight: 500;
  }

  .feature-item svg {
    color: var(--success-green);
  }

  .hero-image {
    position: relative;
  }

  .hero-img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .hero-badge {
    position: absolute;
    bottom: -2rem;
    right: -2rem;
    background: var(--white);
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    max-width: 280px;
  }

  .badge-title {
    font-weight: 600;
    color: var(--primary-green);
    display: block;
    margin-bottom: 0.5rem;
  }

  .badge-text {
    font-size: 0.875rem;
    color: var(--text-gray);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .badge-link {
    color: var(--primary-green);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .badge-link:hover {
    text-decoration: underline;
  }

  .products-section {
    background-color: var(--white);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .product-image {
    position: relative;
    height: 250px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-image img {
    transform: scale(1.05);
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--primary-green);
    color: var(--white);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .product-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .product-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .product-description {
    color: var(--text-gray);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .product-features {
    list-style: none;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .product-features li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-gray);
  }

  .product-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success-green);
    font-weight: bold;
  }

  .product-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--border-light);
  }

  .product-price {
    font-weight: 600;
    color: var(--primary-green);
    font-size: 1.125rem;
    white-space: nowrap;
  }

  .why-choose-section {
    background-color: var(--warm-gray);
  }

  .why-choose-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .text-left {
    text-align: left;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .benefit-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .benefit-icon {
    background: var(--primary-green);
    color: var(--white);
    padding: 0.75rem;
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .benefit-description {
    color: var(--text-gray);
    line-height: 1.5;
  }

  .why-choose-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 1rem;
  }

  .testimonials-section {
    background-color: var(--white);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
