              <div class="quiz-progress">
                <div class="progress-bar">
                  <div class="progress-fill" id="quiz-progress-fill"></div>
                </div>
                <span class="progress-text" id="quiz-progress-text">Vraag 1 van 5</span>
              </div>
            </div>

            <div class="quiz-steps" id="quiz-steps">
              
              <!-- Question 1 -->
              <div class="quiz-step active" data-step="1">
                <div class="question-icon">🏠</div>
                <h3 class="question-title">Hoe gaat het traplopen tegenwoordig?</h3>
                <div class="question-options">
                  <button class="option-button" data-theme="mobiliteit" data-answer="difficult">
                    <span class="option-icon">😟</span>
                    <span class="option-text">Wordt steeds lastiger</span>
                  </button>
