---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Platform- & Plateauliften – WMO & Subsidie | LeefZeker"
  description="Platformliften met volledige WMO- en subsidieondersteuning. Binnen- en buitenoplossingen, gratis thuisadvies, 5 jaar garantie."
>
  <Header />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Platformliften",
    "description": "Platform- en plateauliften met WMO-ondersteuning en subsidiebegeleiding",
    "brand": {
      "@type": "Brand",
      "name": "LeefZeker"
    },
    "offers": [
      {
        "@type": "Offer",
        "name": "Binnen Platformliften",
        "availability": "https://schema.org/InStock",
        "description": "WMO-gepast voor binnen gebruik"
      },
      {
        "@type": "Offer", 
        "name": "Buiten Platformliften",
        "availability": "https://schema.org/InStock",
        "description": "Subsidie-controle via WMO-loket"
      },
      {
        "@type": "Offer",
        "name": "Commerciële Platformliften",
        "availability": "https://schema.org/InStock",
        "description": "Voor zakelijk gebruik met WMO-mogelijkheden"
      }
    ],
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.8",
      "reviewCount": "150"
    }
  }
  </script>

  <!-- FAQ Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "Hoe werkt subsidie voor platformliften?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Via de WMO kunt u subsidie aanvragen voor platformliften. Wij begeleiden u volledig bij dit proces."
        }
      },
      {
        "@type": "Question",
        "name": "Wat zijn de kosten van een platformlift?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "De kosten variëren per type en situatie. Neem contact op voor een persoonlijke offerte met WMO-advies."
        }
      }
    ]
  }
  </script>
  
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Platform- & plateauliften – Toegankelijkheid met WMO-ondersteuning</h1>
          <h2 class="hero-subtitle">Binnen- en buitenoplossingen inclusief subsidiecheck en 5 jaar garantie.</h2>
          <div class="hero-features">
            <div class="hero-feature">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
              </svg>
              <span>WMO-begeleiding</span>
            </div>
            <div class="hero-feature">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
              <span>CE gecertificeerd</span>
            </div>
            <div class="hero-feature">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
              <span>5 jaar garantie</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Types Section -->
    <section class="section">
      <div class="container">
        <h2 class="section-title">Liftcategorieën</h2>
        <div class="types-grid">
          <div class="type-card" itemscope itemtype="https://schema.org/Product">
            <div class="type-image">
              <img src="/src/assets/img_site/Wheelchair-Lift-Installation-Process-DME-Elevators-Lifts-scaled-1.jpg" alt="binnen platformlift WMO-gepast" loading="lazy" />
            </div>
            <div class="type-content">
              <h3 class="type-title" itemprop="name">Binnen Platformliften</h3>
              <p class="type-description" itemprop="description">
                Ideaal voor gebruik binnen in huis. Compact design en stille werking voor optimaal comfort.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-gepast - Subsidie mogelijk</strong>
              </div>
              <ul class="type-features">
                <li>Geschikt voor rolstoelen en rollatoren</li>
                <li>Stil en soepel in werking</li>
                <li>Compact design</li>
                <li>Verschillende afmetingen beschikbaar</li>
              </ul>
              <div class="type-specs">
                <div class="spec-item">
                  <span class="spec-label">Max. hoogte:</span>
                  <span class="spec-value">3 meter</span>
                </div>
                <div class="spec-item">
                  <span class="spec-label">Max. belasting:</span>
                  <span class="spec-value">250 kg</span>
                </div>
              </div>
              <a href="/offerte" class="btn btn-primary" id="cta-platformbinnen-wmo">Offerte Aanvragen</a>
            </div>
          </div>

          <div class="type-card" itemscope itemtype="https://schema.org/Product">
            <div class="type-image">
              <img src="/src/assets/img_site/stairlift.jpg" alt="buiten platformlift subsidie-controle" loading="lazy" />
            </div>
            <div class="type-content">
              <h3 class="type-title" itemprop="name">Buiten Platformliften</h3>
              <p class="type-description" itemprop="description">
                Weerbestendige platformliften voor buitengebruik. Perfect voor entrees, terrassen en tuinen.
              </p>
              <div class="wmo-highlight">
                <strong>Subsidie-controle via WMO-loket</strong>
              </div>
              <ul class="type-features">
                <li>Weerbestendig materiaal</li>
                <li>Robuuste constructie</li>
                <li>Geschikt voor alle weersomstandigheden</li>
                <li>Anti-slip platform</li>
              </ul>
              <div class="type-specs">
                <div class="spec-item">
                  <span class="spec-label">Max. hoogte:</span>
                  <span class="spec-value">4 meter</span>
                </div>
                <div class="spec-item">
                  <span class="spec-label">Max. belasting:</span>
                  <span class="spec-value">300 kg</span>
                </div>
              </div>
              <a href="/offerte" class="btn btn-primary" id="cta-platformbuiten-wmo">Offerte Aanvragen</a>
            </div>
          </div>

          <div class="type-card" itemscope itemtype="https://schema.org/Product">
            <div class="type-image">
              <img src="/src/assets/img_site/pexels-kampus-7551667.jpg" alt="goederenlift commercieel WMO" loading="lazy" />
            </div>
            <div class="type-content">
              <h3 class="type-title" itemprop="name">Goederen Platformliften</h3>
              <p class="type-description" itemprop="description">
                Zware duty platformliften voor commercieel gebruik en goederentransport. Geschikt voor winkels, kantoren en openbare gebouwen.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-advies beschikbaar</strong>
              </div>
              <ul class="type-features">
                <li>Hoge belastbaarheid</li>
                <li>Intensief gebruik mogelijk</li>
                <li>Voldoet aan commerciële normen</li>
                <li>Verschillende afwerkingen</li>
              </ul>
              <div class="type-specs">
                <div class="spec-item">
                  <span class="spec-label">Max. hoogte:</span>
                  <span class="spec-value">6 meter</span>
                </div>
                <div class="spec-item">
                  <span class="spec-label">Max. belasting:</span>
                  <span class="spec-value">500 kg</span>
                </div>
              </div>
              <a href="/offerte" class="btn btn-primary" id="cta-platformgoederen-wmo">Offerte Aanvragen</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Subsidieproces Section -->
    <section class="section subsidie-section" id="subsidie-plateaulift">
      <div class="container">
        <h2 class="section-title">Subsidieproces</h2>
        <div class="subsidie-steps">
          <div class="subsidie-step">
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
              </svg>
            </div>
            <h3 class="step-title">1. WMO-indicatie</h3>
            <p class="step-description">Wij helpen u bij het aanvragen van een WMO-indicatie voor uw platformlift.</p>
          </div>
          <div class="subsidie-step">
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4"></path>
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <h3 class="step-title">2. Subsidie-aanvraag</h3>
            <p class="step-description">Samen dienen wij de subsidie-aanvraag in bij uw gemeente.</p>
          </div>
          <div class="subsidie-step">
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9,22 9,12 15,12 15,22"></polyline>
              </svg>
            </div>
            <h3 class="step-title">3. Installatie</h3>
            <p class="step-description">Bij goedkeuring plannen wij de installatie van uw platformlift.</p>
          </div>
        </div>
        <div class="subsidie-cta">
          <a href="/offerte" class="btn btn-primary btn-large" id="cta-subsidie-plateaulift">Subsidie Check Plateaulift</a>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="section benefits-section">
      <div class="container">
        <h2 class="section-title">Voordelen van Platformliften</h2>
        <div class="benefits-grid">
          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
            </div>
            <h3 class="benefit-title">Geen Trap Aanpassingen</h3>
            <p class="benefit-description">
              Platformliften kunnen worden geïnstalleerd zonder aanpassingen aan uw bestaande trap.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 8v8"></path>
                <path d="M8 12h8"></path>
              </svg>
            </div>
            <h3 class="benefit-title">Universeel Toegankelijk</h3>
            <p class="benefit-description">
              Geschikt voor rolstoelgebruikers, rollatoren en personen met loopproblemen.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                <polyline points="3.27,6.96 12,12.01 20.73,6.96"></polyline>
                <line x1="12" y1="22.08" x2="12" y2="12"></line>
              </svg>
            </div>
            <h3 class="benefit-title">Ruimtebesparend</h3>
            <p class="benefit-description">
              Compact design dat minimaal ruimte in beslag neemt in uw woning.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <h3 class="benefit-title">Maximale Veiligheid</h3>
            <p class="benefit-description">
              Uitgerust met alle moderne veiligheidsvoorzieningen en noodstop-functies.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Installation Process -->
    <section class="section process-section">
      <div class="container">
        <h2 class="section-title">Installatie Proces</h2>
        <div class="process-timeline">
          <div class="timeline-item">
            <div class="timeline-marker">
              <div class="timeline-number">1</div>
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">Locatie Inspectie</h3>
              <p class="timeline-description">
                Onze specialist komt bij u langs om de locatie te inspecteren en WMO-mogelijkheden te bespreken.
              </p>
              <div class="timeline-duration">Duur: 1 uur</div>
            </div>
          </div>

          <div class="timeline-item">
            <div class="timeline-marker">
              <div class="timeline-number">2</div>
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">Technische Tekening</h3>
              <p class="timeline-description">
                Wij maken een technische tekening en zorgen voor alle benodigde vergunningen.
              </p>
              <div class="timeline-duration">Duur: 3-5 werkdagen</div>
            </div>
          </div>

          <div class="timeline-item">
            <div class="timeline-marker">
              <div class="timeline-number">3</div>
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">Productie & Levering</h3>
              <p class="timeline-description">
                Uw platformlift wordt op maat gemaakt en geleverd op de afgesproken datum.
              </p>
              <div class="timeline-duration">Duur: 2-3 weken</div>
            </div>
          </div>

          <div class="timeline-item">
            <div class="timeline-marker">
              <div class="timeline-number">4</div>
            </div>
            <div class="timeline-content">
              <h3 class="timeline-title">Professionele Installatie</h3>
              <p class="timeline-description">
                Onze monteurs installeren de platformlift en geven uitleg over het gebruik.
              </p>
              <div class="timeline-duration">Duur: 1-2 dagen</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Interesse in een platformlift?</h2>
          <p class="cta-description">
            Vraag een gratis offerte aan en ontdek welke platformlift het beste bij uw situatie past.
          </p>
          <div class="cta-actions">
            <a href="tel:020-123-45-67" class="btn btn-primary btn-large" id="cta-phone-platformlift">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              Bel 020 123 45 67
            </a>
            <a href="/offerte" class="btn btn-secondary btn-large" id="cta-offerte-platformlift">Gratis Offerte</a>
          </div>
          <p class="cta-note">Binnen 24 uur reactie</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
    color: var(--white);
    padding: 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    opacity: 0.9;
    max-width: 800px;
    margin: 0 auto 2rem;
    line-height: 1.4;
  }

  .hero-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .hero-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.9;
  }

  .types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .type-card {
    background: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .type-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .type-image {
    position: relative;
    height: 250px;
    overflow: hidden;
  }

  .type-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .type-card:hover .type-image img {
    transform: scale(1.05);
  }

  .type-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .type-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .type-description {
    color: var(--text-gray);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .wmo-highlight {
    background: var(--primary-green);
    color: var(--white);
    padding: 0.75rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .type-features {
    list-style: none;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .type-features li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-gray);
  }

  .type-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success-green);
    font-weight: bold;
  }

  .type-specs {
    background: var(--warm-gray);
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .spec-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .spec-item:last-child {
    margin-bottom: 0;
  }

  .spec-label {
    color: var(--text-gray);
    font-weight: 500;
  }

  .spec-value {
    color: var(--text-dark);
    font-weight: 600;
  }

  .subsidie-section {
    background-color: var(--warm-gray);
  }

  .subsidie-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .subsidie-step {
    background: var(--white);
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .step-icon {
    background: var(--primary-green);
    color: var(--white);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .step-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .step-description {
    color: var(--text-gray);
    line-height: 1.6;
  }

  .subsidie-cta {
    text-align: center;
  }

  .benefits-section {
    background-color: var(--white);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
  }

  .benefit-icon {
    background: var(--primary-green);
    color: var(--white);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .benefit-description {
    color: var(--text-gray);
    line-height: 1.6;
  }

  .process-section {
    background-color: var(--warm-gray);
  }

  .process-timeline {
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .timeline-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 37px;
    top: 80px;
    bottom: -3rem;
    width: 2px;
    background: var(--border-light);
  }

  .timeline-marker {
    flex-shrink: 0;
  }

  .timeline-number {
    background: var(--primary-green);
    color: var(--white);
    width: 75px;
    height: 75px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.5rem;
  }

  .timeline-content {
    flex-grow: 1;
  }

  .timeline-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .timeline-description {
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .timeline-duration {
