---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Mobiliteitshulpmiddelen - WMO Ondersteuning | LeefZeker"
  description="Mobiliteitshulpmiddelen met WMO-ondersteuning. Trapleuningen, drempelhulpen, opstahulpen en meer. Gratis advies en installatie."
>
  <Header />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Mobiliteitshulpmiddelen",
    "description": "Mobiliteitshulpmiddelen met WMO-ondersteuning",
    "itemListElement": [
      {
        "@type": "Product",
        "name": "Trapleuningen",
        "description": "WMO-gepast, veilige en stevige trapleuningen",
        "offers": {
          "@type": "Offer",
          "price": "125",
          "priceCurrency": "EUR"
        }
      },
      {
        "@type": "Product",
        "name": "Drempelhulpen",
        "description": "WMO-ondersteuning, toegankelijke drempelhulpen",
        "offers": {
          "@type": "Offer",
          "price": "45",
          "priceCurrency": "EUR"
        }
      },
      {
        "@type": "Product",
        "name": "Opstahulpen",
        "description": "WMO-subsidie mogelijk, hulp bij opstaan",
        "offers": {
          "@type": "Offer",
          "price": "85",
          "priceCurrency": "EUR"
        }
      }
    ]
  }
  </script>
  
  <main>
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Mobiliteitshulpmiddelen</h1>
          <p class="hero-description">
            Verhoog uw mobiliteit en zelfstandigheid met onze selectie van hoogwaardige hulpmiddelen. 
            Van trapleuningen tot badkamer aanpassingen - wij hebben de oplossing. <strong>Inclusief WMO-ondersteuning.</strong>
          </p>
          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-number">WMO</span>
              <span class="stat-label">ondersteuning</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">15+</span>
              <span class="stat-label">jaar ervaring</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">24/7</span>
              <span class="stat-label">service</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="section">
      <div class="container">
        <h2 class="section-title">Productcategorieën</h2>
        <div class="categories-grid">
          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/pexels-pixabay-302083.jpg" alt="trapleuningen WMO-gepast veilig" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Trapleuningen</h3>
              <p class="category-description" itemprop="description">
                Veilige en stevige trapleuningen voor extra ondersteuning. Op maat gemaakt voor uw trap.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-gepast</strong> - Subsidie mogelijk
              </div>
              <ul class="category-features">
                <li>Maatwerk leuningen</li>
                <li>Verschillende materialen</li>
                <li>Binnen en buiten gebruik</li>
                <li>Ergonomische handgrepen</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€125</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>

          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/pexels-pixabay-33786.jpg" alt="drempelhulpen WMO-ondersteuning toegankelijk" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Drempelhulpen</h3>
              <p class="category-description" itemprop="description">
                Maak drempels toegankelijk met onze drempelhulpen. Perfect voor rolstoelen en rollatoren.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-ondersteuning</strong> - Toegankelijkheid
              </div>
              <ul class="category-features">
                <li>Verschillende hoogtes</li>
                <li>Anti-slip oppervlak</li>
                <li>Weerbestendig</li>
                <li>Eenvoudig te installeren</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€45</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>

          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/pexels-olly-3768131.jpg" alt="opstahulpen WMO-subsidie hulp opstaan" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Opstahulpen</h3>
              <p class="category-description" itemprop="description">
                Hulp bij het opstaan uit bed of stoel. Geeft extra steun en zekerheid.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-subsidie mogelijk</strong> - Ondersteuning
              </div>
              <ul class="category-features">
                <li>Verstelbare hoogte</li>
                <li>Stevige constructie</li>
                <li>Verschillende modellen</li>
                <li>Eenvoudig te gebruiken</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€85</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>

          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/pexels-kampus-7551684.jpg" alt="badkamer hulpmiddelen WMO-veiligheid" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Badkamer Hulpmiddelen</h3>
              <p class="category-description" itemprop="description">
                Maak uw badkamer veiliger met onze badkamer hulpmiddelen. Van douchestoelen tot beugels.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-veiligheid</strong> - Badkamer aanpassingen
              </div>
              <ul class="category-features">
                <li>Douchestoelen</li>
                <li>Badkamer beugels</li>
                <li>Anti-slip strips</li>
                <li>Toiletverhogers</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€35</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>

          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/pexels-matthiaszomer-339620.jpg" alt="veiligheidsverlichting WMO-preventie" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Veiligheidsverlichting</h3>
              <p class="category-description" itemprop="description">
                Automatische verlichting voor trappen en gangen. Verhoogt de veiligheid 's nachts.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-preventie</strong> - Valpreventie
              </div>
              <ul class="category-features">
                <li>LED verlichting</li>
                <li>Bewegingssensoren</li>
                <li>Dimbaar</li>
                <li>Energiezuinig</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€65</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>

          <div class="category-card" itemscope itemtype="https://schema.org/Product">
            <div class="category-image">
              <img src="/src/assets/img_site/ouderenalarm.jpg" alt="alarmsystemen WMO-zorg hulp" loading="lazy" />
            </div>
            <div class="category-content">
              <h3 class="category-title" itemprop="name">Persoonlijke Alarmsystemen</h3>
              <p class="category-description" itemprop="description">
                Blijf veilig met onze persoonlijke alarmsystemen. Hulp op afstand beschikbaar.
              </p>
              <div class="wmo-highlight">
                <strong>WMO-zorg</strong> - 24/7 hulp beschikbaar
              </div>
              <ul class="category-features">
                <li>24/7 hulpdienst</li>
                <li>Waterdicht</li>
                <li>Lange batterijduur</li>
                <li>GPS functie</li>
              </ul>
              <div class="category-price" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                <span class="price-from">Vanaf</span>
                <span class="price-amount" itemprop="price">€25</span>
                <span class="price-per">/maand</span>
                <meta itemprop="priceCurrency" content="EUR">
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="section benefits-section">
      <div class="container">
        <h2 class="section-title">Waarom kiezen voor onze hulpmiddelen?</h2>
        <div class="benefits-grid">
          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <h3 class="benefit-title">Kwaliteit & Veiligheid</h3>
            <p class="benefit-description">
              Alle producten worden getest op kwaliteit en veiligheid volgens Europese normen.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
              </svg>
            </div>
            <h3 class="benefit-title">WMO-Advies & Begeleiding</h3>
            <p class="benefit-description">
              Onze experts adviseren u over WMO-mogelijkheden en de beste hulpmiddelen voor uw situatie.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9,22 9,12 15,12 15,22"></polyline>
              </svg>
            </div>
            <h3 class="benefit-title">Installatie Service</h3>
            <p class="benefit-description">
              Professionele installatie door onze ervaren technici bij u thuis.
            </p>
          </div>

          <div class="benefit-card">
            <div class="benefit-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
            </div>
            <h3 class="benefit-title">Garantie & Service</h3>
            <p class="benefit-description">
              Uitgebreide garantie en service na installatie voor uw gemoedsrust.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="section faq-section">
      <div class="container">
        <h2 class="section-title">Veelgestelde Vragen</h2>
        <div class="faq-grid">
          <div class="faq-item">
            <h3 class="faq-question">Krijg ik vergoeding via de WMO?</h3>
            <p class="faq-answer">
              Via de WMO kunt u subsidie aanvragen voor veel hulpmiddelen. Wij helpen u graag bij het aanvragen van WMO-indicaties en vergoedingen.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Hoe lang duurt de installatie?</h3>
            <p class="faq-answer">
              De meeste hulpmiddelen kunnen binnen een paar uur geïnstalleerd worden. Voor complexere installaties plannen wij een afspraak.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Kan ik de hulpmiddelen eerst uitproberen?</h3>
            <p class="faq-answer">
              Ja, bij veel producten is een proefperiode mogelijk. Zo kunt u ervaren of het hulpmiddel goed bij u past.
            </p>
          </div>

          <div class="faq-item">
            <h3 class="faq-question">Wat gebeurt er bij storingen?</h3>
            <p class="faq-answer">
              Onze 24/7 service zorgt ervoor dat u altijd hulp kunt krijgen. De meeste storingen kunnen snel worden opgelost.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">Verhoog uw mobiliteit en zelfstandigheid</h2>
          <p class="cta-description">
            Ontdek welke hulpmiddelen u kunnen helpen om langer zelfstandig te blijven wonen. 
            Vraag een gratis adviesgesprek aan met WMO-expertise.
          </p>
          <div class="cta-actions">
            <a href="tel:020-123-45-67" class="btn btn-primary btn-large" id="cta-phone-hulpmiddelen">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              Bel 020 123 45 67
            </a>
            <a href="/offerte" class="btn btn-secondary btn-large" id="cta-hulpmiddel-wmo">WMO Hulpmiddel Check</a>
          </div>
          <p class="cta-note">Binnen 24 uur reactie</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
    color: var(--white);
    padding: 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--white);
  }

  .stat-label {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: var(--white);
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .category-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-image img {
    transform: scale(1.05);
  }

  .category-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .category-description {
    color: var(--text-gray);
    margin-bottom: 1rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .wmo-highlight {
    background: var(--primary-green);
    color: var(--white);
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .category-features {
    list-style: none;
    margin-bottom: 1.5rem;
  }

  .category-features li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-gray);
    font-size: 0.9rem;
  }

  .category-features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success-green);
    font-weight: bold;
  }

  .category-price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-top: auto;
  }

  .price-from {
    color: var(--text-gray);
    font-size: 0.875rem;
  }

  .price-amount {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-green);
  }

  .price-per {
    color: var(--text-gray);
    font-size: 0.875rem;
  }

  .benefits-section {
    background-color: var(--warm-gray);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
  }

  .benefit-icon {
    background: var(--primary-green);
    color: var(--white);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .benefit-description {
    color: var(--text-gray);
    line-height: 1.6;
  }

  .faq-section {
    background-color: var(--white);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    background: var(--warm-gray);
    padding: 2rem;
    border-radius: 1rem;
  }

  .faq-question {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .faq-answer {
    color: var(--text-gray);
    line-height: 1.6;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
    color: var(--white);
    text-align: center;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .cta-description {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .cta-note {
    font-size: 0.875rem;
    opacity: 0.8;
    font-style: italic;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  .cta-section .btn-secondary {
    background-color: var(--white);
    color: var(--primary-green);
    border-color: var(--white);
  }

  .cta-section .btn-secondary:hover {
    background-color: transparent;
    color: var(--white);
    border-color: var(--white);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 1.5rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.75rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .category-title {
      font-size: 1.125rem;
    }

    .cta-title {
      font-size: 1.75rem;
    }
  }
</style> 