---
export interface Props {
  title: string;
  audience: string;
  category: string;
  tags?: string[];
  summary: string;
  icon?: string;
  downloadLink?: string;
  blogLink?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  audience, 
  category, 
  tags = [], 
  summary, 
  icon = "ðŸ“„",
  downloadLink,
  blogLink,
  ctaText = "Lees meer",
  ctaLink = "/contact"
} = Astro.props;
---

<div class="knowledge-card" data-category={category.toLowerCase().replace(/\s+/g, '-')}>
  <div class="knowledge-header">
    <div class="knowledge-icon">{icon}</div>
    <div class="knowledge-meta">
      <div class="knowledge-audience">{audience}</div>
      <div class="knowledge-category">{category}</div>
    </div>
  </div>
  
  <h3 class="knowledge-title">{title}</h3>
  <p class="knowledge-summary">{summary}</p>
  
  {tags.length > 0 && (
    <div class="knowledge-tags">
      {tags.map(tag => (
        <span class="knowledge-tag">{tag}</span>
      ))}
    </div>
  )}
  
  <div class="knowledge-actions">
    {downloadLink && (
      <a href={downloadLink} class="knowledge-action download" download>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7,10 12,15 17,10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        Download
      </a>
    )}
    
    {blogLink && (
      <a href={blogLink} class="knowledge-action blog">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14,2 14,8 20,8"/>
          <line x1="16" y1="13" x2="8" y2="13"/>
          <line x1="16" y1="17" x2="8" y2="17"/>
          <polyline points="10,9 9,9 8,9"/>
        </svg>
        Blog
      </a>
    )}
    
    <a href={ctaLink} class="knowledge-action primary">
      {ctaText}
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="7" y1="17" x2="17" y2="7"/>
        <polyline points="7,7 17,7 17,17"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .knowledge-card {
    background: var(--white);
    border: 2px solid var(--border-light);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .knowledge-card:hover {
    border-color: var(--primary-green);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .knowledge-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .knowledge-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .knowledge-meta {
    flex-grow: 1;
  }

  .knowledge-audience {
    font-size: 0.875rem;
    color: var(--primary-green);
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .knowledge-category {
    font-size: 0.75rem;
    color: var(--text-gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .knowledge-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .knowledge-summary {
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .knowledge-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .knowledge-tag {
    background: var(--warm-gray);
    color: var(--text-gray);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .knowledge-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-top: auto;
  }

  .knowledge-action {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid var(--border-light);
    background: var(--white);
    color: var(--text-gray);
  }

  .knowledge-action:hover {
    text-decoration: none;
    transform: translateY(-1px);
  }

  .knowledge-action.download {
    color: var(--primary-green);
    border-color: var(--primary-green);
  }

  .knowledge-action.download:hover {
    background: var(--primary-green);
    color: var(--white);
  }

  .knowledge-action.blog {
    color: #3b82f6;
    border-color: #3b82f6;
  }

  .knowledge-action.blog:hover {
    background: #3b82f6;
    color: var(--white);
  }

  .knowledge-action.primary {
    background: var(--primary-green);
    color: var(--white);
    border-color: var(--primary-green);
  }

  .knowledge-action.primary:hover {
    background: var(--primary-green-dark);
    border-color: var(--primary-green-dark);
  }

  @media (max-width: 768px) {
    .knowledge-card {
      padding: 1.25rem;
    }

    .knowledge-actions {
      flex-direction: column;
    }

    .knowledge-action {
      justify-content: center;
    }
  }
</style> 